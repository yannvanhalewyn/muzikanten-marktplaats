<h1><%= @user.name %></h1>
<img src="<%= @user.image %>" alt="">
<%= link_to t("user.fb-profile"), @user.fb_profile_url %>

<!-- The user's adverts -->
<div class="user-adverts">
  <h1><%= @user.first_name %>'s <%= t('adverts.title') %></h1>
  <%= render(partial: 'adverts/advert', collection: @user.adverts.order('created_at DESC')) \
    || "#{@user.first_name} #{t('user.has-no-ads')}." %>
</div>
