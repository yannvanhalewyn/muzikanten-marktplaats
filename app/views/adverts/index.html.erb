<% if current_user %>
  <%= link_to t("adverts.new"), new_advert_path %>
<% end %>

<h1><%= t("adverts.title") %></h1>
<ul class="adverts">
  <% @adverts.each do |advert| %>
    <li id="advert_<%= advert.id %>" class="advert-listing">
      <%= link_to advert_path(advert) do %>
        <% if advert.images.any?  %>
          <%= image_tag advert.images.first.asset.thumb.url %>
        <% end %>
        <h2><%= advert.title %></h2>
        <p><%= advert.description %></p>
        <p><%= number_to_currency(advert.price, unit: "â‚¬") %></p>
        <small class="advert-timetag"><%= time_ago_in_words advert.created_at %> <%= t('general.ago') %> | </small>
        <small class="advert-comment-count">
          <%= advert.comments.count %> <%= t('general.comments') %>
        </small>
      <% end %>
    </li>
    <hr>
  <% end %>
</ul>
